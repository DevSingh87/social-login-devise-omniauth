  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header login_modal_header">
               <h2 class="modal-title" id="myModalLabel">Login to Your Account</h2>
          </div>
          <div class="modal-body login-modal">
            <p>This is a demo app to show how a user can login with social networking sites and devise as well.</p>
            <br/>
            <div class="clearfix"></div>
            <div id='social-icons-conatainer'>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class='modal-body-left'>
                <div class="form-group">
                      
                      <%= f.email_field :email, autofocus: true, :id=>"email", :placeholder=>"Enter your email id", :class=>"form-control login-field" %>
                      <i class="fa fa-user login-field-icon"></i>
                  </div>
    
                  <div class="form-group">
                      
                      <%= f.password_field :password, autocomplete: "off", :id=>"login-pass", :placeholder=>"Password", :class=>"form-control login-field" %>
                      <i class="fa fa-lock login-field-icon"></i>
                  </div>
                    <%= f.submit "Log in", :class=>"btn btn-success modal-login-btn" %> <br/>  
                    
                      </div>
             <% end %>
              <div class='modal-body-right'>
                <div class="modal-social-icons">
                  <a href="/users/auth/facebook" class="btn btn-default facebook"> <i class="fa fa-facebook modal-icons"></i> Sign In with Facebook </a>
                  <a href='#' class="btn btn-default twitter"> <i class="fa fa-twitter modal-icons"></i> Sign In with Twitter </a>
                  <a href="/users/auth/google_oauth2" class="btn btn-default google"> <i class="fa fa-google-plus modal-icons"></i> Sign In with Google </a>
                                  
                </div> 
              </div>  
              <div id='center-line'> OR </div>
            </div>                                                        
            <div class="clearfix"></div>
            
            <div class="form-group modal-register-btn">
             
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                 <%= link_to "New User Please Register", new_registration_path(resource_name), :class=>"btn btn-default" %><br />
              <% end -%>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="modal-footer login_modal_footer">
           <a href="http://www.techiedev.com">www.techiedev.com</a>
          </div>
      </div>
    </div>
</div>

